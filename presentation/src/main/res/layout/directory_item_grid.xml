<?xml version="1.0" encoding="utf-8"?>

<com.bwksoftware.android.seasync.presentation.components.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="0dp"
    tools:ignore="UseCompoundDrawables">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:elevation="2dp"
        card_view:cardCornerRadius="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/directory_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_profile" />

            <ImageView
                android:id="@+id/synced_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="1dp"
                android:src="@drawable/synced"
                android:visibility="gone" />
            <TextView
                android:id="@+id/directory_name"
                android:background="@color/cardview_light_background"
                android:layout_width="match_parent"
                android:ellipsize="end"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_height="wrap_content"
                android:lines="1"
                android:singleLine="true"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/directory_datemodified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Medium Text"
                android:visibility="gone"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textSize="13sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</com.bwksoftware.android.seasync.presentation.components.SquareRelativeLayout>